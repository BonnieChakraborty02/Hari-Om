<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary"
    tools:context=".AddEditContact">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:padding="@dimen/_10sdp">

        <!--circle image for profile image-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileIv"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/baseline_person_24"
            android:layout_gravity="center"
            app:civ_border_width="@dimen/_1sdp"
            app:civ_border_color="@color/colorTextPrimary"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout">
            <!--edittext for name input-->
            <EditText
                android:id="@+id/nameEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_input_field"
                android:drawableStart="@drawable/baseline_text_fields_24"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="Name"
                android:inputType="textPersonName"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorTextSecondary"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_14sdp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/micName"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_230sdp"
                android:onClick="startRecognition"
                android:layout_marginTop="@dimen/_15sdp"
                android:src="@drawable/baseline_mic_24"
                app:civ_border_color="@color/colorTextPrimary"
                app:civ_border_width="@dimen/_1sdp" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/micNameCancel"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_265sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:onClick="stopRecognition"
                android:src="@drawable/baseline_cancel_24"
                app:civ_border_color="@color/colorTextPrimary"
                app:civ_border_width="@dimen/_1sdp"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <!--edittext for phone input-->
            <EditText
                android:id="@+id/phoneEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:hint="Phone"
                android:inputType="phone"
                android:textColorHint="@color/white"
                android:background="@drawable/background_input_field"
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableStart="@drawable/baseline_phone_24"
                android:drawablePadding="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/colorTextSecondary"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/micPhone"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_230sdp"
                android:onClick="startRecognition1"
                android:layout_marginTop="@dimen/_15sdp"
                android:src="@drawable/baseline_mic_24"
                app:civ_border_color="@color/colorTextPrimary"
                app:civ_border_width="@dimen/_1sdp" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/micPhoneCancel"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_265sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:onClick="stopRecognition1"
                android:src="@drawable/baseline_cancel_24"
                app:civ_border_color="@color/colorTextPrimary"
                app:civ_border_width="@dimen/_1sdp"/>
        </RelativeLayout>

        <!--edittext for email input-->
        <EditText
            android:id="@+id/emailEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/white"
            android:background="@drawable/background_input_field"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableStart="@drawable/baseline_email_24"
            android:drawablePadding="@dimen/_5sdp"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/colorTextSecondary"
            />

        <!--edittext for email input-->
        <EditText
            android:id="@+id/birthdayEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="BirthDay(eg.: day/month/year)"
            android:textColorHint="@color/white"
            android:background="@drawable/background_input_field"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableStart="@drawable/baseline_cake_24"
            android:drawablePadding="@dimen/_5sdp"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/colorTextSecondary"
            />
        <!--edittext for bio note input-->
        <EditText
            android:id="@+id/noteEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Note"
            android:inputType="textLongMessage"
            android:textColorHint="@color/white"
            android:background="@drawable/background_input_field"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableStart="@drawable/baseline_note_24"
            android:drawablePadding="@dimen/_5sdp"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/colorTextSecondary"
            />
    </LinearLayout>

    <!--fab button for add date to database-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:backgroundTint="@color/colorTextPrimary"
        android:contentDescription="@string/todo"
        android:elevation="@dimen/_5sdp"
        android:src="@drawable/baseline_add_24"
        app:pressedTranslationZ="@dimen/_10sdp"
        app:tint="@color/white" />


</RelativeLayout>